{
  "editor": {
    "autoIndent": true,
    "dragAndDrop": true,
    "fontFamily": "Fira Code, Hasklig, Hack, monospace",
    "fontLigatures": true,
    "fontSize": 14,
    "minimap": {
      "enabled": true,
      "renderCharacters": false
    },
    "renderIndentGuides": true,
    "wordWrap": "on",
    "wordWrapColumn": 80
  },
  "gitlens": {
    "blame": {
      "ignoreWhitespace": true
    }
  },
  "go": {
    "coverOnSave": true,
    "enableCodeLens": {
      "references": false,
      "runtest": false
    },
    "lintTool": "gometalinter",
    "lintFlags": ["--fast", "--tests", "--vendor"],
    "liveErrors": {
      "enabled": true,
      "delay": 500
    }
  },
  "window.menuBarVisibility": "toggle",
  "workbench.welcome.enabled": false,
  "[javascript]": {
    "eslint.autoFixOnSave": true,
    "javascript.validate.enable": false
  },
  "[typescript]": {
    "tslint.autoFixOnSave": true
  }
}
