{
  "editor": {
    "autoIndent": true,
    "codeActionsOnSave": {
      "source.organizeImports": true
    },
    "dragAndDrop": true,
    "fontFamily": "'Cascadia Code', 'Fira Code', Hasklig, Hack, monospace",
    "fontLigatures": true,
    "fontSize": 14,
    "minimap": {
      "enabled": true,
      "renderCharacters": false
    },
    "renderIndentGuides": true,
    "suggestSelection": "first",
    "wordWrap": "on",
    "wordWrapColumn": 80
  },
  "files.defaultLanguage": "markdown",
  "files.exclude": {
    "**/*.gz": true,
    "**/*.pyc": true,
    "**/__pycache__": true
  },
  "gitlens": {
    "blame": {
      "ignoreWhitespace": true
    },
    "codeLens": {
      "authors.enabled": false,
      "scopes": [
        "document"
      ]
    },
    "historyExplorer.enabled": true,
    "hovers.currentLine.over": "line",
    "keymap": "none"
  },
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
    "suppressResultsExplorerNotice": false,
    "suppressShowKeyBindingsNotice": true,
    "suppressUpdateNotice": true,
    "suppressWelcomeNotice": true
  },
  "go": {
    "coverageOptions": "showUncoveredCodeOnly",
    "coverOnSave": true,
    "enableCodeLens": {
      "references": false,
      "runtest": true
    },
    "lintTool": "golangci-lint",
    "lintFlags": ["--fast", "--tests", "--vendor"],
    "liveErrors": {
      "enabled": true,
      "delay": 500
    }
  },
  "python.jediEnabled": false,
  "search": {
    "exclude": {
      "**/site-packages/**": true,
      "**/vendor": true
    },
    "smartCase": true
  },
  "terminal.integrated.copyOnSelection": true,
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "window.menuBarVisibility": "toggle",
  "workbench": {
    "fontAliasing": "auto",
    "startupEditor": "newUntitledFile",
    "welcome.enabled": false
  },
  "[go]": {
    "editor": {
      "formatOnPaste": true,
      "formatOnSave": true
    }
  },
  "[javascript]": {
    "eslint.autoFixOnSave": true
  },
  "[rust]": {
    "editor": {
      "formatOnPaste": true,
      "formatOnSave": true
    }
  },
  "[typescript]": {
    "editor": {
      "formatOnPaste": true,
      "formatOnSave": true
    },
    "tslint.autoFixOnSave": true
  },
  "cSpell.userWords": [
    "clippy"
  ]
}
